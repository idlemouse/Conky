own_window_type desktop
alignment top_right
border_inner_margin 4
border_outter_margin 2
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
double_buffer yes
draw_borders yes
draw_graph_borders yes
draw_outline no
draw_shades no
extra_newline no
gap_x 10
gap_y 120
maximum_width 550
minimum_size 5 5
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
override_utf8_locale no
own_window yes
own_window_argb_value 80
own_window_argb_visual yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
show_graph_range no
show_graph_scale no
stippled_borders 1
text_buffer_size 2048
total_run_times 0
update_interval 1.0
uppercase yes
use_spacer none
use_xft yes
xftalpha 1
xftfont DejaVu Sans Mono:size=8

TEXT
[${color orange}${uid_name 1000}$color][$nodename]
$sysname $kernel on $machine
$hr
${color grey}Uptime:$color $uptime
${color grey}Frequency (in MHz):$color $freq
${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
${color grey}Package Updates: $color ${execpi 3600 checkupdates | wc -l}
$hr
${color grey}CPU Usage:$color $cpu% ${color grey}Temp:$color $acpitemp C
${cpubar 4}
${cpugraph}
$stippled_hr
${color grey}Core 1:$color ${hwmon 1 temp 1}C ${cpubar 4 cpu0}
${color grey}Core 2:$color ${hwmon 1 temp 2}C ${cpubar 4 cpu1}
${color grey}Core 3:$color ${hwmon 1 temp 3}C ${cpubar 4 cpu2}
${color grey}Core 4:$color ${hwmon 1 temp 2}C ${cpubar 4 cpu3}
$stippled_hr
${color grey}RAM Usage:$color $mem/$memmax - $memperc%
${membar 4}
${color grey}Swap Usage:$color $swap/$swapmax - $swapperc%
${swapbar 4}
${color grey}Battery Status:$color ${battery BAT1}
${color grey}Battery Time:$color ${battery_time BAT1}
${battery_bar BAT1}
$hr
${color grey}File systems:
${color grey} root (/) $color${fs_used /}/${fs_size /}
${fs_bar 6 /}
${color grey} boot (/biit) $color${fs_used /boot}/${fs_size /boot}
${fs_bar 6 /boot}
${color grey} home (/home) $color${fs_used /home}/${fs_size /home}
${fs_bar 6 /home}
$hr
${color grey}Wireless AP:$color ${wireless_essid wlp2s0}
${color grey}Bitrate:$color ${wireless_bitrate wlp2s0} ${tab 10}${color grey}Strength:$color ${wireless_link_qual wlp2s0}%
$stippled_hr
${color grey}Up:$color ${upspeed wlp2s0} ${goto 118}${color grey} Down:$color ${downspeed wlp2s0}
${color grey}Total:$color ${totalup wlp2s0} ${goto 118}${color grey} Total:$color ${totaldown wlp2s0}
${downspeedgraph wlp2s0 25,100}      ${upspeedgraph wlp2s0 25,100} 
$hr
${color grey}Name              PID   CPU%   MEM%
${color lightgrey} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color lightgrey} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color lightgrey} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color lightgrey} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
